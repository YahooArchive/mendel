base-config:
  id: base
  dir: ./app
  outdir: ./build

variation-config:
  variation-dirs:
    - ./variations
  # dir names should be unique across all roots or mendel throws
  variations:
    test_A:
      - test_A

route-config:
  variation: /mendel/:variations/:bundle
  hash: /mendel/:hash/:bundle

types:
  js:
    outlet:
      plugin: mendel-bundle-browser-pack
    extensions:
      - .js
  css:
    extensions:
      - .css

outlets:
  - id: manifest
    plugin: mendel-outlet-manifest
  - id: css
    plugin: mendel-outlet-css

# "outfile" is optional and only needed for single layer generation
bundles:
  main:
    outlet: manifest
    outfile: main.js
    entries:
      - ./index.js
  css:
    outlet: css
    outfile: main.css
    entries:
      - "**/*.css"
      - "!exclude.css"
