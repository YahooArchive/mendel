
outdir: ./build
bundlesoutdir: client
serveroutdir: server

base: base
basetree: isomorphic/base
bundles:
  vendor:
    require:
      - react
      - react-dom
  main:
    entries:
      - main.js
    require:
      - ./isomorphic/base/components/button.js
      - ./isomorphic/variations/bucket_A/components/button.js
      - ./isomorphic/variations/partner_C/components/button.js
    external:
      - react
      - react-dom
      - ./isomorphic/base/components/lazy.js
    transform:
      - babelify
  lazy:
    require:
      - ./isomorphic/base/components/lazy.js
    external:
      - react
      - react-dom
      - ./isomorphic/base/components/button.js
      - ./isomorphic/variations/bucket_A/components/button.js
      - ./isomorphic/variations/partner_C/components/button.js
    transform:
      - babelify

variationsdir: isomorphic/variations
variations:
  unexisting_folder:
  bucket_A:
    - unexisting_folder
  feature_B:
  partner_C:
  bucket_D:
    - partner_C

